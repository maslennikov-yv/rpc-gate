# Streaming Server Configuration

# Server addresses
HTTP_ADDR=:8080
HTTPS_ADDR=:8443
TCP_ADDR=:8081
TLS_ADDR=:8444
WS_ADDR=:8082
WSS_ADDR=:8445

# Kafka configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=rpc-requests

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=kafka
LOG_SUCCESS_ONLY=false

# Service information
SERVICE_NAME=streaming-server
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# TLS configuration
TLS_CERT_FILE=
TLS_KEY_FILE=

# Performance tuning
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s

# Development flags
DEBUG=false
PROFILE=false
